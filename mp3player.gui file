    private void STOPJBActionPerformed(java.awt.event.ActionEvent evt) {                                       
        gs.stop();
    }                                      

    private void PLAYJBActionPerformed(java.awt.event.ActionEvent evt) {                                       
        try {
            gs.play("D:\\Video\\Mp3");
        } catch (IOException ex) {
           
        }
    }                                      

    private void PAUSEJBActionPerformed(java.awt.event.ActionEvent evt) {                                        
        gs.pause();
    }                                       

    private void RESUMEJBActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            gs.resume();
        } catch (IOException ex) {
           
        }
    }                                        

    private void SELECTJBActionPerformed(java.awt.event.ActionEvent evt) {                                         
           FileNameExtensionFilter filter=new FileNameExtensionFilter("MP3 Files","mp3","mpeg3");
           JFileChooser chooser=new JFileChooser("D:\\Video\\Mp3");
           chooser.addChoosableFileFilter(filter);
           int ReturnVal=chooser.showOpenDialog(null);
           if(ReturnVal==JFileChooser.APPROVE_OPTION){
            try {
                gs.stop();
                File myfile=chooser.getSelectedFile();
                String song=myfile+"";
                String name=chooser.getSelectedFile().getName();
                Display.setText(name);
                gs.stop();
                gs.play(song);
            } catch (IOException ex) {
                
            }
           }
           
           
           
    }                                        

